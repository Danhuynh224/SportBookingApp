<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D65D9"
        android:padding="24dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đặt sân thành công"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgSuccess"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/baseline_check_circle_outline_24" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cảm ơn vì đã đặt\nBạn đã đặt sân thành công tại sân Tennis Cây Lộc Vừng,\nThứ Tư, 23-04-2025 từ 9:00 đến 10:00"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>
    <!-- Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#F0F4F8"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvBookingId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID Đặt Sân: #00256"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#0D65D9"
            android:layout_marginBottom="12dp" />

        <!-- Booking Details -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:rowOrderPreserved="false"
        android:useDefaultMargins="true">

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:text="Tên người đặt"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtUserName"
            android:layout_row="0"
            android:layout_column="1"
            android:text="Lionel Ronaldo"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:text="Giá tiền"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_row="1"
            android:layout_column="1"
            android:text="200.000 VND"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:text="Phương thức thanh toán"
            android:textColor="#555555" />

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:text="Chuyển khoản"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:text="Thời gian thanh toán"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/txtDate"
            android:layout_row="3"
            android:layout_column="1"
            android:text="04:00 pm, 02 Wed 2024"
            android:textColor="#000000"
            android:textStyle="bold" />
    </GridLayout>
</LinearLayout>
    <Button
        android:id="@+id/btnReturnHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Trở về trang chủ"
        android:textAllCaps="false"
        android:backgroundTint="#0D65D9"
        android:textColor="#FFFFFF"
        android:padding="12dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>
</LinearLayout>
