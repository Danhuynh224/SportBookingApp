<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderDetailLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chi tiết đơn hàng"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Dải phân cách -->
    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/background"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/constraintTitle"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Icon tick -->
    <ImageView
        android:id="@+id/imgTick"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/baseline_check_24"
        android:contentDescription="Success Tick"
        app:layout_constraintTop_toBottomOf="@id/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- Trạng thái -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giữ chỗ"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/imgTick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Hướng dẫn thanh toán -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vui lòng thanh toán để hoàn tất đặt lịch\nĐơn hàng của bạn đã được giữ trong 5 phút"
        android:textSize="14sp"
        android:textColor="#666666"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <!-- Đồng hồ đếm ngược -->
    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:25"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/tvInstruction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />

    <!-- Thông tin chi tiết sân -->
    <LinearLayout
        android:id="@+id/layoutInfo"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTimer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvTenSan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tennis Cây Lộc Vùng Thủ Đức"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1110 Phạm Văn Đồng, Linh Đông, Thủ Đức"
            android:textColor="#555555"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />


        <LinearLayout
            android:id="@+id/layoutTimeSlots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvNgayGio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày: 12/04/2025"
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvTongTien"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tổng tiền: 100,000 VND"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Nút Thanh Toán -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnThanhToan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="THANH TOÁN"
        android:textColor="@android:color/white"
        android:backgroundTint="@color/primary"
        android:background="@drawable/btn_frame"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/layoutInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Nút Chat với chủ sân -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChatChuSan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CHAT VỚI CHỦ SÂN"
        android:textSize="17dp"
        android:textColor="@color/primary"
        android:background="@drawable/btn_frame"
        android:backgroundTint="@color/material_dynamic_neutral_variant90"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnThanhToan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
