<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frag.PaymentFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="Thông tin đặt lịch"/>
        <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            app:cardElevation="2dp"
            android:id="@+id/cardInfoBook"
            app:cardBackgroundColor="@color/outline"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:id="@+id/txtName"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Tennis Cây Lộc Vừng Thủ Đức"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/txtAddress"
                    android:layout_height="wrap_content"
                    android:text="110 Phạm Văn Đồng, Linh Đông Thủ Đức"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/txtType"
                    android:layout_height="wrap_content"
                    android:text="Loại sân: Cầu lông"
                    />
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:id="@+id/txtDate"
                    android:layout_height="wrap_content"
                    android:text="Ngày: 10/08/2025"/>
                <TextView
                    android:padding="5dp"
                    android:layout_width="wrap_content"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content"
                    android:text="Thời gian"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>