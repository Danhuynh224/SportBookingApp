<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".frag.PersonalInfoFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">
            <LinearLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tên"/>
                <EditText
                    android:layout_marginTop="5dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:background="@drawable/border_textview" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Số điện thoại"/>
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtPhone"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:background="@drawable/border_textview" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Email"/>
                <EditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/txtEmail"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:background="@drawable/border_textview" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Giới tính"/>

                <TextView
                    android:id="@+id/sex_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chọn giới tính"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Ngày sinh"/>
                <EditText
                    android:id="@+id/edtBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:hint="Chọn ngày sinh"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:inputType="none"
                    android:background="@drawable/border_textview"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Thành phố - Tỉnh"/>
                <TextView
                    android:id="@+id/city_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chọn tỉnh/thành phố"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Huyện - Quận"/>
                <TextView
                    android:id="@+id/district_picker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chọn quận/huyện"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textSize="16dp"
                    android:background="@android:drawable/editbox_background"
                    android:gravity="center_vertical"
                    android:drawableEnd="@drawable/ic_arrow_drop_down_24"/>
                <Button
                    android:layout_gravity="center"
                    android:id="@+id/updateBtn"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:layout_marginTop="20dp"
                    android:text="Cập nhật">
                </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>