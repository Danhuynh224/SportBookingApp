<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="2dp"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Cầu lông"
        android:paddingBottom="8dp"
        android:textSize="20sp"
        android:textStyle="bold">

    </TextView>
    <!-- 4 hàng thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <!-- Dòng 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp"
           >

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Ca"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Khung Giờ"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:text="Đơn giá/60p"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Dòng 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:text="Sáng sớm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:text="3h-7h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvEarly"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Dòng 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:text="Ban ngày"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:text="7h-17h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Dòng 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:text="Ban đêm"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:text="17h-23h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNight"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- Dòng 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <TextView
                android:text="Cuối tuần"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:text="3h-23h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvWeek"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black" android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
